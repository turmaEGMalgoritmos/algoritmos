#include <stdio.h>
#include <stdlib.h>

//praticamente é a mesma coisa da primeira, apenas inverte o sinal de maior para menor. 
int maior(int a, int b) {
  if (a > b) {
    return a;
  } else {
    return b;
  }
}
int main() {
  int num1, num2;

  printf("Digite o primeiro número: ");
  scanf("%d", &num1);

  printf("Digite o segundo número: ");
  scanf("%d", &num2);

  int resultado = maior(num1, num2);

  printf("o maior valor é %d", resultado);

  return 0;
}
