#include <stdio.h>
#include <stdlib.h>

//função media de dois numeros.
float media(float n1, float n2) {

  return (n1 + n2) / 2;

}
int main() {
  float num1, num2;

  printf("digite o primeiro número: ");
  scanf("%f", &num1);

  printf("digite o segundo número: ");
  scanf("%f", &num2);

  float resultado = media(num1, num2);
  
  printf("a média é %.2f\n", resultado);

  return 0;
}
