#include <stdio.h>
#include <stdlib.h> 

int main() {
    int a, d;
    int an[10];

    printf("digite o número inicial da P.A: ");
    scanf("%d", &a);

    printf("digite a razão da P.A: ");
    scanf("%d", &d);

  
    for (int i = 0; i < 10; i++) {
        an[i] = a + (i * d);
    }

    printf("os termos da P.A são: ");
    for (int i = 0; i < 10; i++) {
        printf("%d ", an[i]);
    }
    printf("\n");

    return 0;
}
