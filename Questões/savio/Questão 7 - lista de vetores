#include <stdio.h>
#include <stdlib.h>

int main() {
    int v[10];
     int M, m;
  
    for (int i = 0; i < 10; i++) {
        printf("Digite um valor: ");
        scanf("%d", &v[i]);
    }

    M = v[0];
    m = v[0];
  
    M = v[0];
    int posicao = 0;
    for (int i = 1; i < 10; i++) {
        if (v[i] > M) {
            M = v[i];
            posicao = i;
        }
    }

    // Imprime o maior elemento e a sua posição no vetor
    printf("\nMaior elemento: %d\n", M);
    printf("Posição do maior elemento: %d", posicao);

    return 0;
}
